class Solution {
public:
    vector<string> divideString(string s, int k, char fill) {
        vector<string> ans;
        for( int i=0;i<s.size();i+=k){
            string part = s.substr(i,k);
            if(part.size()<k){
                part.append(k-part.size(),fill);
            }
            ans.push_back(part);
        }
        return ans;
    }
};