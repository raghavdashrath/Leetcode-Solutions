class Solution {
public:
    vector<int> decimalRepresentation(int n) {
        vector<int> res;
        string s = to_string(n);
        int len = s.size();
        for(int i=0;i<len;i++){
            if(s[i]!='0'){
                int digit = s[i] - '0';
                int value = digit * pow(10, len - i - 1);
                res.push_back(value);
            }
        }
        return res;
    }
};